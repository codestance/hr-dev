{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "jsx": "react",
    "emitBOM": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2021", "ESNext.AsyncIterable", "DOM"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
